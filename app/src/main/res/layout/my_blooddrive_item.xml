<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="8dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">


        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDescription"
            android:layout_marginStart="14dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/imageView23"
            android:text="Oct 21, 2017"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtAssociation"
            android:layout_alignTop="@+id/txtAssociation"
            android:layout_marginTop="35dp"
            android:text="Venue"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtAssociation"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:text="Name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtLocation"
            android:layout_below="@+id/txtLocation"
            android:layout_marginTop="12dp"
            android:text="Description"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/textView9"
            android:layout_below="@+id/textView9"
            android:layout_marginRight="30dp"
            android:text="TextView"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/textView10"
            android:layout_marginRight="30dp"
            android:ellipsize="end"
            android:maxLength="180"
            android:maxLines="3"
            android:text='"1st Blood drive organized by the USLS Nursing Department in partnership with Philippine Red Cross Bacolod Chapter."'
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtDate"
            android:layout_below="@+id/txtDate"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="3dp"
            android:text="10:30PM-8:30PM"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignStart="@+id/txtDescription"
            android:layout_alignTop="@+id/txtDate"
            android:tint="@color/colorAccent"
            app:srcCompat="@drawable/calendar" />

        <Button
            android:id="@+id/btnManage"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/txtDate"
            android:layout_marginEnd="15dp"
            android:background="@color/colorPrimaryDark"
            android:text="Manage Post"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</android.support.v7.widget.CardView>