<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/light_grey"
                android:orientation="vertical"
                android:weightSum="1">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/colorAccent"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/txtType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/textView30"
                        android:layout_alignEnd="@+id/textView30"
                        android:layout_alignStart="@+id/textView30"
                        android:paddingBottom="-4dp"
                        android:text="X"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txtPostCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/txtPostCount1"
                        android:layout_alignEnd="@+id/txtPostCount1"
                        android:layout_alignStart="@+id/txtPostCount1"
                        android:paddingBottom="-4dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="Blood Type"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/txtPostCount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="20dp"
                        android:text="Posts"
                        android:textColor="@color/colorWhite" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgUser"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@mipmap/ic_launcher_round" />

                    <TextView
                        android:id="@+id/txtAssociation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgUser"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtCount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="20dp"
                        android:text="Donated"
                        android:textColor="@color/light_grey" />

                    <TextView
                        android:id="@+id/txtCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/txtCount1"
                        android:layout_alignEnd="@+id/txtCount1"
                        android:layout_alignStart="@+id/txtCount1"
                        android:paddingBottom="-4dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent">

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:background="@color/colorWhite"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/txtDateDonated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView29"
                        android:layout_alignBottom="@+id/textView29"
                        android:layout_toEndOf="@+id/textView29"
                        android:text="TextView"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtBirthdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView31"
                        android:layout_alignTop="@+id/imageView31"
                        android:layout_marginLeft="22dp"
                        android:layout_toEndOf="@+id/imageView31"
                        android:text="Unavailable"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/textView8"
                        android:layout_below="@+id/textView8"
                        android:layout_marginTop="5dp"
                        android:text="Last Donated: "
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/textView8"
                        android:text="TextView"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignStart="@+id/imageView26"
                        android:layout_marginTop="5dp"
                        android:text="Status:  "
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/imageView31"
                        android:layout_alignTop="@+id/imageView30"
                        android:layout_marginLeft="22dp"
                        android:layout_toEndOf="@+id/imageView30"
                        android:text="Unavailable"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/imageView30"
                        android:layout_alignTop="@+id/imageView29"
                        android:layout_marginLeft="22dp"
                        android:layout_toEndOf="@+id/imageView29"
                        android:text="Unavailable"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtContactOrg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView28"
                        android:layout_alignTop="@+id/imageView28"
                        android:layout_marginLeft="22dp"
                        android:layout_toEndOf="@+id/imageView28"
                        android:text="Unavailable"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/imageView26"
                        android:layout_alignTop="@+id/imageView26"
                        android:layout_marginLeft="22dp"
                        android:layout_toEndOf="@+id/imageView26"
                        android:text="Unavailable"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imageView26"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView29"
                        android:layout_marginStart="23dp"
                        android:layout_marginTop="20dp"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/location" />

                    <ImageView
                        android:id="@+id/imageView28"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignStart="@+id/imageView26"
                        android:layout_below="@+id/imageView26"
                        android:layout_marginTop="20dp"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/telephone" />

                    <ImageView
                        android:id="@+id/imageView29"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignStart="@+id/imageView28"
                        android:layout_below="@+id/imageView28"
                        android:layout_marginTop="20dp"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/email" />

                    <ImageView
                        android:id="@+id/imageView30"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignStart="@+id/imageView29"
                        android:layout_below="@+id/imageView29"
                        android:layout_marginTop="20dp"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/genders" />

                    <ImageView
                        android:id="@+id/imageView31"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignStart="@+id/imageView30"
                        android:layout_below="@+id/imageView30"
                        android:layout_marginTop="20dp"
                        android:tint="@color/colorAccent"
                        app:srcCompat="@drawable/date_of_birth" />

                    <ProgressBar
                        android:id="@+id/progress"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:indeterminate="true"
                        android:indeterminateTint="@color/colorAccent"
                        android:progressTint="@color/colorAccent" />

                    <TextView
                        android:id="@+id/txtProgress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/progress"
                        android:text="Loading posts"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txtShow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Recipient:"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtRecipient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="5dp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:foregroundGravity="bottom"
        android:gravity="bottom">

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimaryDark"
            android:text="Confirm Donation"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</LinearLayout>